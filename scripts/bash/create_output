# Add Terms of Use
TOU=`cat TermsOfUse_ForICESCode.txt`
for filename in output/code/*/*.py; do
    echo "$(printf "\"\"\"\n$TOU\n\"\"\"\n"| cat - "$filename")" > $filename
done